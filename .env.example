# Vercel Blob Storage (required for file uploads)
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token-here

# PostgreSQL Database Configuration
DB_HOST=34.107.63.251
DB_PORT=5432
DB_NAME=steuerberater
