  "blacklist_domains": [
    "wikipedia.org",
    "reddit.com",
    "anwalt.de",
    "kanzlei-blogs.*",
    "kommerzielle-news-portale.*",
    "steuertipps-blogs.*"
  ],
  "parse_hints": {
    "html": { "prefer": ["print", "singlepage"], "strip": ["nav", "footer", "cookie", "js"], "keep_tables": true },
    "pdf": { "ocr_threshold_dpi": 300, "detect_layout": true, "extract_tables": true, "keep_page_coords": true },
    "chunking": {
      "LAW": { "by": ["§", "Abs.", "Satz", "Nr."], "max_chars": 2000 },
      "BMF": { "by": ["Randziffer", "Ziffer", "Abschnitt"], "max_chars": 1800 },
      "RULING": { "by": ["Leitsatz", "Gründe", "Tatbestand", "Rn."], "max_chars": 1800 },
      "FORM": { "by": ["Formularteil", "Zeile", "KZ"], "max_chars": 1600 }
    }
  },
  "link_rules": [
    { "from": "BMF", "to": "LAW", "relation": "INTERPRETS", "pattern": "EStG|UStG|KStG|GewStG|AO|EStDV|UStDV|BewG" },
    { "from": "RULING", "to": "LAW", "relation": "APPLIES", "pattern": "§\\s*\\d+\\s*[a-zA-Z]*\\s*(EStG|UStG|KStG|GewStG|AO|BewG)" },
    { "from": "FORM", "to": "LAW", "relation": "MAPS_TO", "pattern": "Kennziffer|Zeile|Anlage" },
    { "from": "EU_LAW", "to": "UStG", "relation": "HARMONIZES", "pattern": "MwSt-Systemrichtlinie|Richtlinie 2006/112/EG" }
  ],
