    { "domain": "www.bgbl.de", "type": "GAZETTE", "priority": 9, "sitemaps": [] },
    { "domain": "www.elster.de", "type": "FORM/TECH", "priority": 9, "sitemaps": [] },
    { "domain": "www.bzst.de", "type": "ADMIN", "priority": 8, "sitemaps": [] },
    { "domain": "www.bundesrat.de", "type": "PARLIAMENT", "priority": 7, "sitemaps": [] },
    { "domain": "www.bundestag.de", "type": "PARLIAMENT", "priority": 7, "sitemaps": [] },
    { "domain": "www.ofd.niedersachsen.de", "type": "STATE_FINMIN", "priority": 6, "sitemaps": [] },
    { "domain": "www.finanzamt.bayern.de", "type": "STATE_FINMIN", "priority": 6, "sitemaps": [] },
    { "domain": "www.justiz.bund.de", "type": "JUSTICE", "priority": 6, "sitemaps": [] },
    { "domain": "eur-lex.europa.eu", "type": "EU_LAW", "priority": 7, "sitemaps": [] }
